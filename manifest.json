{
  "manifest_version": 3,
  "name": "Caseify",
  "version": "1.0.0",
  "description": "Converts text to uppercase, lowercase or capitalize in any input box.",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ]
}
